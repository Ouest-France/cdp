<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                      https://maven.apache.org/xsd/settings-1.0.0.xsd">
  <servers>
    <server>
      <id>release</id>
      <username>${env.CDP_REPOSITORY_USERNAME}</username>
      <password>${env.CDP_REPOSITORY_PASSWORD}</password>
    </server>
    <server>
      <id>snapshot</id>
      <username>${env.CDP_REPOSITORY_USERNAME}</username>
      <password>${env.CDP_REPOSITORY_PASSWORD}</password>
    </server>
    <server>
      <id>git</id>
      <username>gitlab-ci-token</username>
      <password>${env.GITLAB_TOKEN}</password>
    </server>
  </servers>

  <profiles>
    <profile>
      <id>repository</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <repositories>
        <repository>
          <id>central</id>
          <url>https://repo.maven.apache.org/maven2</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
        </repository>
        <repository>
          <id>release</id>
          <url>${env.CDP_REPOSITORY_URL}/${env.CDP_REPOSITORY_MAVEN_RELEASE}</url>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
        <repository>
          <id>snapshot</id>
          <url>${env.CDP_REPOSITORY_URL}/${env.CDP_REPOSITORY_MAVEN_SNAPSHOT}</url>
          <snapshots>
            <enabled>true</enabled>
            <updatePolicy>always</updatePolicy>
          </snapshots>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <id>central</id>
          <url>https://repo.maven.apache.org/maven2</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
        </pluginRepository>
        <pluginRepository>
          <id>release</id>
          <url>${env.CDP_PLUGINREPOSITORY_URL}/${env.CDP_PLUGINREPOSITORY_MAVEN_RELEASE}</url>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </pluginRepository>
        <pluginRepository>
          <id>snapshot</id>
          <url>${env.CDP_PLUGINREPOSITORY_URL}/${env.CDP_PLUGINREPOSITORY_MAVEN_SNAPSHOT}</url>
          <snapshots>
            <enabled>true</enabled>
            <updatePolicy>always</updatePolicy>
          </snapshots>
        </pluginRepository>
      </pluginRepositories>
    </profile>
  </profiles>
</settings>
